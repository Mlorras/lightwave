{
    "swagger": "2.0",
    "info": {
        "title": "Lightwave VmDir API",
        "version": "1.3.0"
    },
    "schemes": [
        "https"
    ],
    "host": "IPADDRESS_MARKER",
    "basePath": "/v1",
    "produces": [
        "application/json",
        "text/plain"
    ],
    "tags": [
        {
            "name": "certs",
            "description": "cert operations"
        },
        {
            "name": "password",
            "description": "password operations"
        },
        {
            "name": "join",
            "description": "client join operations"
        }
    ],
    "paths": {
        "/vmdir/api/certs/rootcerts": {
            "get": {
                "summary": "Get all root certs",
                "description": "Get all root certs",
                "produces": [
                    "text/plain"
                ],
                "parameters": [
                    {
                        "name": "ca_cn_filter",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "detail",
                        "in": "query",
                        "required": false,
                        "type": "boolean"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Certs Response",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/CertsResponse"
                            }
                        }
                    }
                },
                "tags": [
                    "certs"
                ]
            }
        },
        "/vmdir/api/password/refresh": {
            "post": {
                "summary": "Refresh password",
                "description": "Refresh password",
                "produces": [
                    "text/plain"
                ],
                "parameters": [
                    {
                        "name": "force",
                        "in": "query",
                        "required": true,
                        "type": "boolean"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Password refresh response",
                        "schema": {
                            "$ref": "#/definitions/PasswordRefreshResponse"
                        }
                    }
                },
                "tags": [
                    "password"
                ]
            }
        },
        "/vmdir/api/join/joinatomic": {
            "post": {
                "summary": "join atomic",
                "description": "ensure join happens without server switch",
                "produces": [
                    "text/plain"
                ],
                "parameters": [
                    {
                        "name": "machine_account_name",
                        "in": "query",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "org_unit",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "prejoined",
                        "in": "query",
                        "required": false,
                        "type": "boolean"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Join response",
                        "schema": {
                            "$ref": "#/definitions/JoinResponse"
                        }
                    }
                },
                "tags": [
                    "join"
                ]
            }
        },
        "/vmdir/api/join/createcomputeraccount": {
            "post": {
                "summary": "create computer account",
                "description": "create computer account",
                "produces": [
                    "text/plain"
                ],
                "parameters": [
                    {
                        "name": "machine_account_name",
                        "in": "query",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "domain_name",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    },
                    {
                        "name": "org_unit",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Create computer account response",
                        "schema": {
                            "$ref": "#/definitions/CreateComputerAccountResponse"
                        }
                    }
                },
                "tags": [
                    "join"
                ]
            }
        }
    },
    "definitions": {
        "PasswordRefreshResponse": {
            "type": "object",
            "properties": {
                "refreshed":  {"type": "boolean"},
                "password":  {"type": "string"}
            }
        },
        "CertData": {
            "type": "object",
            "properties": {
                "cert":       {"type": "string"},
                "crl":        {"type": "string"},
                "cn":         {"type": "string"},
                "subjectdn":  {"type": "string"}
            }
        },
        "CertsResponse": {
            "type": "object",
            "properties": {
                "certs": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/CertData"
                    }
                }
            }
        },
        "MachineAccount": {
            "type": "object",
            "properties": {
                "computer_dn": {"type": "string"},
                "sitename":    {"type": "string"},
                "machine_guid":{"type": "string"}
            }
        },
        "KrbInfo": {
            "type": "object",
            "properties": {
                "blobs": {
                    "type": "array",
                    "items": {"type": "string"}
                }
            }
        },
        "JoinResponse": {
            "type": "object",
            "properties": {
                "join": {
                    "machine_account": {
                        "type": "object",
                        "items": {
                            "$ref": "#/definitions/MachineAccount"
                        }
                    },
                    "krb_info": {
                        "type": "object",
                        "items": {
                            "$ref": "#/definitions/KrbInfo"
                        }
                    }
                }
            }
        },
        "CreateComputerAccountResponse": {
            "type": "object",
            "properties": {
                "computer_account": {
                    "computer_dn": {"type": "string"},
                    "password":    {"type": "string"},
                    "sitename":    {"type": "string"},
                    "machine_guid":{"type": "string"}
                }
            }
        }
    }
}
